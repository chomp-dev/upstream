{
  "name": "chomp",
  "version": "1.0.0",
  "private": true,
  "description": "TikTok-style food discovery app",
  "scripts": {
    "mobile": "cd apps/mobile && npm start",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "mobile:android": "cd apps/mobile && npm run android",
    "media-api": "cd services/media-api && npm run dev",
    "search-api": "cd services/search-api && uvicorn app.main:app --reload --port 8000",
    "install:all": "npm install && cd apps/mobile && npm install && cd ../../services/media-api && npm install",
    "dev": "echo 'Run mobile, media-api, and search-api in separate terminals'"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ]
}
